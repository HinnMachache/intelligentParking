<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D5D3D3"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/my_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/top_card_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/black"
            >

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="text"
                android:text="intelligentParking"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textAlignment="gravity"
            android:textSize="15dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="80dp"
            android:outlineSpotShadowColor="@color/black"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textAlignment="gravity"
            android:textSize="15dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="200dp"
            android:outlineSpotShadowColor="@color/black"/>

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_button"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="190dp"
            android:ems="10"
            android:inputType="number"
            tools:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/lefteditTextNumber"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_button"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="190dp"
            android:ems="10"
            android:inputType="number"
            tools:text="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_marginTop="270dp"
            app:srcCompat="@mipmap/car_yellow" />

        <ImageView
            android:id="@+id/leftimageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_marginTop="450dp"
            app:srcCompat="@mipmap/car_yellow" />

        <ImageView
            android:id="@+id/top_rigttimageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@mipmap/car_yellow" />

        <ImageView
            android:id="@+id/bottom_rightimageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@mipmap/car_yellow" />

        <TextView
            android:id="@+id/slot1"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:text="Empty"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/A1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="240dp"
            android:text="A1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/A2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="420dp"
            android:text="A2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/B2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="420dp"
            android:text="B2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="240dp"
            android:text="B1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/slot3"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="200dp"
            android:text="Empty"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/slot4"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="200dp"
            android:text="Empty"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/slot2"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:text="Empty"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="30sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            app:cardBackgroundColor="@color/yellow2"
            >

            <EditText
                android:id="@+id/bottomTextText"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="text"
                android:text="iP"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>


</LinearLayout>